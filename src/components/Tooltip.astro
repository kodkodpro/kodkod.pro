---
export type Props = {
  label: string
}

const { label } = Astro.props
---

<span class="group relative">
  <strong class="border-b border-dashed border-current cursor-pointer dark:text-white group-hover:opacity-75">{label}</strong>

  <span class="hidden group-hover:block absolute top-0 left-1/2 -translate-x-1/2 -translate-y-full w-[32ch] ">
    <span class="block w-full bg-slate-700 text-white text-sm font-medium leading-snug px-5 pb-[1rem] pt-[0.95rem] rounded-lg mb-2">
      <slot />
    </span>
  </span>
</span>